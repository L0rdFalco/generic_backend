doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/assets/css/auth.css')
    title authentication
  body
    h3#error ALL FIELDS ARE REQUIRED
    #container.container
      .form-container.sign-up-container
        form
          h1 Create Account
          .social-container
            a.social(href='#')
              i.fab.fa-facebook-f
            a.social(href='#')
              i.fab.fa-google-plus-g
            a.social(href='#')
              i.fab.fa-linkedin-in
          span or use your email for registration
          input#nameInput(type='text', placeholder='Name' required)
          input#emailInput(type='email', placeholder='Email' required)
          input#pwInput(type='password', placeholder='Password' required)
          button#signUpBtn Sign Up
      .form-container.sign-in-container
        form
          h1 Sign in
          .social-container
            a.social(href='#')
              i.fab.fa-facebook-f
            a.social(href='#')
              i.fab.fa-google-plus-g
            a.social(href='#')
              i.fab.fa-linkedin-in
          span or use your account
          input#emailInput1(type='email', placeholder='Email' required)
          input#pwInput1(type='password', placeholder='Password' required)
          a(href='#') Forgot your password?
          button#signInBtn Sign In
      .overlay-container
        .overlay
          .overlay-panel.overlay-left
            h1 Welcome Back!
            p To keep connected with us please login with your personal info
            button#signIn.ghost Sign In
          .overlay-panel.overlay-right
            h1 Hello, Friend!
            p Enter your personal details and start journey with us
            button#signUp.ghost Sign Up
    script(src='/assets/js/auth.js')
    script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
